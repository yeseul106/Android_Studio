<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TableRow>
        <EditText
            android:id="@+id/Edit1"
            android:layout_weight="1"
            android:layout_span="5"
            android:hint="숫자1"/>
    </TableRow>

    <TableRow>
        <EditText
            android:id="@+id/Edit2"
            android:layout_weight="1"
            android:layout_span="5"
            android:hint="숫자2"/>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/btn0"
            android:layout_weight="1"
            android:text="0"/>
        <Button
            android:id="@+id/btn1"
            android:layout_weight="1"
            android:text="1"/>
        <Button
            android:id="@+id/btn2"
            android:layout_weight="1"
            android:text="2"/>
        <Button
            android:id="@+id/btn3"
            android:layout_weight="1"
            android:text="3"/>
        <Button
            android:id="@+id/btn4"
            android:layout_weight="1"
            android:text="4"/>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/btn5"
            android:layout_weight="1"
            android:text="5"/>
        <Button
            android:id="@+id/btn6"
            android:layout_weight="1"
            android:text="6"/>
        <Button
            android:id="@+id/btn7"
            android:layout_weight="1"
            android:text="7"/>
        <Button
            android:id="@+id/btn8"
            android:layout_weight="1"
            android:text="8"/>
        <Button
            android:id="@+id/btn9"
            android:layout_weight="1"
            android:text="9"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/BtnAdd"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="더하기"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/BtnSub"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:text="빼기"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/BtnMul"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:text="곱하기"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/BtnDiv"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:text="나누기"/>
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/TextResult"
            android:textSize="30dp"
            android:textColor="#FF0000"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_span="5"
            android:text="계산 결과 : "/>
    </TableRow>
</TableLayout>